#############
#    Git    #
#############
getBranchName() { git rev-parse --abbrev-ref HEAD } 

go() { git fetch && git switch $1 && git pull } # SWitches to diferent branch - $1 is the branch name
gof() { git fetch && git switch "feature/$1" && git pull } # SWitches to diferent branch - $1 is the branch name
alias god="go develop"
#alias reset="git reset --soft HEAD~1"
alias undo="git reset --soft HEAD~1"

alias graph="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all"
#alias gg="graph"

alias fetch="git fetch && git branch -v -a"
#alias mm="git merge"
#alias merge="git merge"
alias pull="git pull"
alias push="git push"

alias branch="git branch"
alias branches="branch"
alias br="branch"
del() { git branch -d $1 } # deletes a branch - $1 is the branch name
delete() { # deletes current branch
    echo "Deleting $current_branch (2 step process)"
    current_branch=$(getBranchName)
    if [ "develop" = "$current_branch" ]; then
        echo "Error: You can't delete develop branch."
        return 1
    fi    
    god
    git branch -d $current_branch
}

alias cm='echo "Enter commit message: " && read MSG && git add . && git commit -m "$MSG"'
alias commit='echo "Enter commit message: " && read MSG && git add . && git commit -m "$MSG"'
alias try='echo "Enter branch to get: " && read MSG && git merge "$MSG" --no-commit --no-ff -X theirs && git reset'

alias dev='npm run dev'
alias d='dev'

alias lerna='npx lerna bootstrap --hoist && npm run dev'
alias le='lerna'

alias stash='git stash --include-untracked'
alias restore='git stash apply'
alias unStash='restore'
alias getStash='restore'

alias update='git pull origin develop'

alias discard='git restore . && git clean -f'

get() { git fetch && git switch $1 && git pull && git switch develop && git merge --no-ff --no-edit origin/"$1" && git reset HEAD~1 } # Gets branch without merging - $1 is the branch name

new() { git checkout -b "feature/$1" } # Creates new feature - $1 is the branch name
newIssue() { git checkout -b "issue/$1" } # Creates new issue - $1 is the branch name
newBug() { git checkout -b "bug/$1" } # Creates new hot fix - $1 is the branch name

merge() {  # merge current branch into develop
    echo "Merging $current_branch into develop (3 step process)"
    current_branch=$(getBranchName)

    if [ "develop" = "$current_branch" ]; then
        echo "Error: You can't merge develop branch."
        return 1
    fi    

    git merge develop --no-commit
    git switch develop
    git merge $current_branch --no-ff --no-commit
}

